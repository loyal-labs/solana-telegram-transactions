# Public client env (NEXT_PUBLIC_)
NEXT_PUBLIC_TELEGRAM_BOT_ID=
NEXT_PUBLIC_SOLANA_ENV=devnet
# Optional: mainnet, testnet, devnet, localnet
NEXT_PUBLIC_SERVER_HOST=
NEXT_PUBLIC_GAS_PUBLIC_KEY=
NEXT_PUBLIC_USE_MOCK_SUMMARIES=false

# Server env (required for app features)
DATABASE_URL=postgresql://...
ASKLOYAL_TGBOT_KEY=
TELEGRAM_SETUP_SECRET=
CRON_SECRET=
REDPILL_AI_API_KEY=
JUPITER_API_KEY=
IRYS_SOLANA_KEY=
DEPLOYMENT_PK=
# Optional but recommended for encrypted content (base64-encoded 32-byte key)
MESSAGE_ENCRYPTION_KEY=

# Optional /summary peer remap (test chat -> source community chat)
TELEGRAM_SUMMARY_PEER_OVERRIDE_FROM=
TELEGRAM_SUMMARY_PEER_OVERRIDE_TO=
# Example:
# TELEGRAM_SUMMARY_PEER_OVERRIDE_FROM="-4864680368"
# TELEGRAM_SUMMARY_PEER_OVERRIDE_TO="-1002981429221"

# Cloudflare R2 (required when using core/r2-upload.ts)
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
# Optional:
CLOUDFLARE_R2_S3_ENDPOINT=
CLOUDFLARE_R2_UPLOAD_PREFIX=
# Example:
# CLOUDFLARE_R2_S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
# CLOUDFLARE_R2_UPLOAD_PREFIX=telegram/photos

# Cloudflare CDN (required when using core/cdn-url.ts; set at least one)
CLOUDFLARE_CDN_BASE_URL=
NEXT_PUBLIC_CLOUDFLARE_CDN_BASE_URL=
# Dev fallback options
CLOUDFLARE_R2_PUBLIC_DEV_URL=
NEXT_PUBLIC_CLOUDFLARE_R2_PUBLIC_DEV_URL=
